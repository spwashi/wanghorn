{
  "app_name":   "example-app",
  "urls":       {
    "_": "http://localhost/wanghorn"
  },
  "namespace":  "EXAMPLE_APP",



  //
  // Paths we should check for the autoloaders.
  // If this is an object, the keys represent the environment.
  //   [.php] files   - executed as PHP scripts
  //
  "autoload":   {
    "_":   [ "CONFIG_PATH/autoload/autoload.php" ],
    "dev": [ "CONFIG_PATH/autoload/autoload.php" ]
  },



  //
  // Information about the controllers we're going to use
  //
  "controller": {
    "namespace": "Controller"
  },



  //
  // These are the various paths referenced by the application/framework
  //
  "paths":      {
    "views":   "APP_PATH/view/",
    "models":  "CONFIG_PATH/models/",
    "routes":  "CONFIG_PATH/routes/",
    "sources": "CONFIG_PATH/sources/"
  }
}